<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speedtyper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InstructionsActivity"></activity>
        <activity android:name=".ResultActivity" />
        <activity android:name=".SpeedRunActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".RankingActivity" />
        <activity android:name=".SelectModeActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>